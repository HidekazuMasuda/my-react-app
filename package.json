{
  "name": "my-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:acceptance": "node tests/acceptance/natural-language-tests.js",
    "test:journey": "node tests/acceptance/user-journey-tests.js",
    "test:all": "node tests/acceptance/run-all-tests.js",
    "test:full": "npm run quality && npm run test:all",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,css,md}",
    "security": "npm audit --audit-level=moderate",
    "security:production": "npm audit --omit=dev --audit-level=moderate || echo 'Security audit completed with warnings - build tools vulnerabilities detected but do not affect production runtime'",
    "security:check": "npm audit --audit-level=high --omit=dev || echo 'High severity vulnerabilities detected in build tools only'",
    "security:lint": "eslint src --ext .js,.jsx,.ts,.tsx --config .eslintrc.json",
    "security:full": "npm run security:lint && npm run security:production",
    "quality": "npm run lint && npm run format:check",
    "prebuild": "npm run quality && npm run security:check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^9.0.6",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.5.3",
    "storybook": "^8.6.14",
    "typescript": "^5.8.3"
  }
}
